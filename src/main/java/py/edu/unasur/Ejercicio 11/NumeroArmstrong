import org.springframework.web.bind.annotation.*;

@RestController
public class ArmstrongNumberController {

    @GetMapping("/api/algorithms/armstrong/{number}")
    public boolean isArmstrongNumber(@PathVariable int number) {
        int originalNumber = number;
        int numberOfDigits = String.valueOf(number).length();
        int result = 0;

        while (number != 0) {
            int remainder = number % 10;
            result += Math.pow(remainder, numberOfDigits);
            number /= 10;
        }

        return originalNumber == result;
    }
}