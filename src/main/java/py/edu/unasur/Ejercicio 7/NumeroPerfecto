import org.springframework.web.bind.annotation.*;

@RestController
public class PerfectNumberController {

    @GetMapping("/api/algorithms/perfect-number/{number}")
    public boolean isPerfectNumber(@PathVariable int number) {
        if (number <= 0) {
            return false; // Los números perfectos son naturales mayores que 0
        }

        int sumDivisors = 1; // Iniciamos en 1 porque todo número es divisible por 1
        for (int i = 2; i <= Math.sqrt(number); i++) {
            if (number % i == 0) {
                sumDivisors += i + (number / i); // Sumamos el divisor y su cociente
            }
        }
        return sumDivisors == number;
    }
}