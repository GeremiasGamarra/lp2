import org.springframework.web.bind.annotation.*;

@RestController
public class GcdController {

    @PostMapping("/api/algorithms/gcd")
    public int gcd(@RequestBody GcdRequest request) {
        int a = request.getA();
        int b = request.getB();

        while (b != 0) {
            int temp = a % b;
            a = b;
            b = temp;
        }

        return a;
    }

    static class GcdRequest {
        private int a;
        private int b;

        // Getters and setters
        // ...
    }
}