import org.springframework.web.bind.annotation.*;

@RestController
public class PowerController {

    @PostMapping("/api/algorithms/power")
    public double calculatePower(@RequestBody PowerRequest request) {
        return Math.pow(request.getBase(), request.getExponent());
    }

    static class PowerRequest {
        private double base;
        private double exponent;

        // Getters and setters
        // ...
    }
}